<AnchorPane prefHeight="710.0" prefWidth="500.0" style="-fx-background-color: #0B3861" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.Controllers.RegisterController">
    <children>
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="200.0" layoutY="20.0">
            <image>
                <Image url="@../Photo/Logo.png" />
            </image>
        </ImageView>
        <VBox layoutY="100.0" prefHeight="710.0" prefWidth="500.0" spacing="5.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="604.0" text="Bienvenue sur Beatcloud !" textAlignment="JUSTIFY" textFill="skyblue">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="Nom: " textFill="skyblue" />
                <TextField fx:id="surname" />
                <Label text="Prénom: " textFill="skyblue" />
                <TextField fx:id="firstname" />
                <Label text="Login: " textFill="skyblue" />
                <TextField fx:id="registerLogin" />
                <Label text="Mot de passe: " textFill="skyblue" />
                <PasswordField fx:id="registerPassword" />
                <Label text="Confirmation du mot de passe: " textFill="skyblue" />
                <PasswordField fx:id="confirmPassword" />
                <Label text="Email: " textFill="skyblue" />
                <TextField fx:id="email" />
                <Label text="N° de téléphone: " textFill="skyblue" />
                <TextField fx:id="phone" />
                <Label text="Date de naissance: " textFill="skyblue" />
                <DatePicker fx:id="birthDate" />
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
        <Button fx:id="registerValidation" style="-fx-background-color: #0489B1" textFill="white" alignment="CENTER" contentDisplay="CENTER" layoutX="180.0" layoutY="600.0" text="Valider" >
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
        </Button>
        <Button fx:id="registerAnnulation" style="-fx-background-color: #0489B1" textFill="white" alignment="CENTER" contentDisplay="CENTER" layoutX="250.0" layoutY="600.0" text="Annuler" >
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
        </Button>
        <Label text="Déjà inscrit ? " textFill="skyblue" layoutX="210.0" layoutY="635.0" />
        <Button fx:id="connection" alignment="CENTER" style="-fx-background-color: #0489B1" textFill="white" contentDisplay="CENTER" layoutY="660.0" layoutX="160.0" text="Se connecter à son compte" >
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
        </Button>
    </children>
</AnchorPane>
