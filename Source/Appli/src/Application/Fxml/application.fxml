<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.Controllers.ApplicationController">
    <top>
        <MenuBar >
            <menus>
                <Menu text="Fichier">
                    <items>
                        <Menu text="Importer...">
                            <items>
                                <MenuItem text="Média..." onAction="#importFile"/>
                            </items>
                        </Menu>
                    </items>
                </Menu>
                <Menu text="Plugin">
                    <items>
                        <MenuItem fx:id="plugin" text="Ajouter un plugin" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <Pane fx:id="musicPane" style="-fx-background-color: #0489B1">
            <children>
                <HBox fx:id="dropZone" spacing="10" onDragOver="#onDragOver" onDragEntered="#onDragEntered" onDragExited="#onDragExited" onDragDropped="#onDragDropped" alignment="CENTER_LEFT" prefHeight="300.0" prefWidth="700.0" style="-fx-background-color: #0B3861" >
                    <padding><Insets topRightBottomLeft="10" /></padding><children></children>
                </HBox>
                <Label text="Gérer votre morceau dans cette zone" textFill="white" layoutY="10.0" layoutX="190.0" >
                    <font><Font name="System Bold" size="20.0" /></font>
                </Label>
                <Button fx:id="addMusic" style="-fx-background-color: #0489B1" alignment="CENTER" textFill="white" contentDisplay="CENTER" layoutX="200.0" layoutY="60.0" text="Ajouter des sons" onAction="#importFile">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
                <Button fx:id="validMusic" style="-fx-background-color: #04B431" alignment="CENTER" textFill="white" contentDisplay="CENTER" layoutX="320.0" layoutY="60.0" text="Valider les sons"  onMouseClicked="#validMusicCliqued" onMouseExited="#validMusicExit" onMouseEntered="#validMusicEnter">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
                <Button fx:id="deleteSound" style="-fx-background-color: #DF0101" alignment="CENTER" textFill="white" contentDisplay="CENTER" layoutX="435.0" layoutY="60.0" text="Supprimer" onMouseClicked="#deleteSound" >
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
                <ChoiceBox fx:id="pluginId" layoutX="16.0" layoutY="52.0" prefWidth="150.0" value="5 minutes">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="2 minutes" />
                            <String fx:value="5 minutes" />
                            <String fx:value="15 minutes" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </children>
        </Pane>
    </center>

    <bottom>
        <HBox fx:id="soundZone" alignment="CENTER" spacing="30" style="-fx-background-color: #0489B1">
            <padding><Insets topRightBottomLeft="50" /></padding>
            <children></children>
        </HBox>
    </bottom>
</BorderPane>
