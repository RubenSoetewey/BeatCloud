                  <MenuItem fx:id="miDrums" text="Mi" />
                  <MenuItem fx:id="faDrums" text="Fa" />
                  <MenuItem fx:id="solDrums" text="Sol" />
                  <MenuItem fx:id="laDrums" text="La" />
                  <MenuItem fx:id="siDrums" text="Si" />
              </items>
            </MenuButton>
            <MenuButton fx:id="guitarButton" >
                <graphic>
                    <ImageView fitHeight="80" fitWidth="80">
                        <image>
                            <Image url="@../Photo/guitar.jpg" />
                        </image>
                    </ImageView>
                </graphic>
              <items>
                  <MenuItem fx:id="doGuitar" text="Do" />
                  <MenuItem fx:id="reGuitar" text="Re" />
                  <MenuItem fx:id="miGuitar" text="Mi" />
                  <MenuItem fx:id="faGuitar" text="Fa" />
                  <MenuItem fx:id="solGuitar" text="Sol" />
                  <MenuItem fx:id="laGuitar" text="La" />
                  <MenuItem fx:id="siGuitar" text="Si" />
              </items>
            </MenuButton>
            <MenuButton fx:id="violinButton" >
                <graphic>
                    <ImageView fitHeight="80" fitWidth="80">
                        <image>
                            <Image url="@../Photo/violin.jpg" />
                        </image>
                    </ImageView>
                </graphic>
              <items>
                  <MenuItem fx:id="doViolin" text="Do" />
                  <MenuItem fx:id="reViolin" text="Re" />
                  <MenuItem fx:id="miViolin" text="Mi" />
                  <MenuItem fx:id="faViolin" text="Fa" />
                  <MenuItem fx:id="solViolin" text="Sol" />
                  <MenuItem fx:id="laViolin" text="La" />
                  <MenuItem fx:id="siViolin" text="Si" />
              </items>
            </MenuButton>
            </children>
        </HBox>
    </bottom>
</BorderPane>
