<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="459.0" prefWidth="846.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.Controllers.ApplicationController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Fichier">
                    <items>
                        <MenuItem fx:id="newFile" accelerator="Ctrl + N" onAction="#createNewFile" text="Nouveau fichier" />
                        <MenuItem fx:id="openFile" accelerator="Ctrl + O" onAction="#openFile" text="Ouvrir un fichier..." />
                        <Menu text="Ouvrir un fichier récent">
                            <items>
                                <MenuItem text="Fermer le menu" />
                            </items>
                        </Menu>
                        <SeparatorMenuItem />
                        <MenuItem accelerator="Ctrl + S" onAction="#saveFile" text="Enregistrer le fichier" />
                        <MenuItem accelerator="Ctrl + Shift + S" onAction="#saveFile" text="Enregistrer sous..." />
                        <SeparatorMenuItem />
                        <Menu text="Importer...">
                            <items>
                                <MenuItem text="Média..." />
                            </items>
                        </Menu>
                        <MenuItem text="Préférences" />
                        <MenuItem text="Fermer" />
                    </items>
                </Menu>
                <Menu text="Editer">
                    <items>
                        <MenuItem accelerator="Ctrl + Z" text="Annuler la saisie" />
                        <MenuItem accelerator="Ctrl + Y" text="Rétablir la saisie" />
                        <SeparatorMenuItem />
                        <MenuItem accelerator="Ctrl + X" text="Couper" />
                        <MenuItem accelerator="Ctrl + C" text="Copier" />
                        <MenuItem accelerator="Ctrl + V" text="Coller" />
                        <MenuItem accelerator="Ctrl + D" text="Dupliquer" />
                        <MenuItem text="Supprimer" />
                    </items>
                </Menu>
                <Menu text="Plugin">
                    <items>
                        <MenuItem fx:id="plugin" text="Ajouter un plugin" />
                    </items>
                </Menu>
                <Menu text="Aide">
                    <items>
                        <MenuItem text="A propos" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <left>
        <VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="250.0" style="-fx-background-color: #0B3861" BorderPane.alignment="CENTER" />
    </left>

    <right>
        <VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="250.0" style="-fx-background-color: #0B3861" BorderPane.alignment="CENTER" />
    </right>

    <center>
        <Pane fx:id="musicPane" prefHeight="400.0" prefWidth="700.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView>
                    <image>
                        <Image requestedHeight="400.0" requestedWidth="700.0" url="@../Photo/music-.jpg" />
                    </image>
                </ImageView>
                <MediaView fx:id="mainView" fitHeight="400.0" fitWidth="700.0">
                    <mediaPlayer>
                        <MediaPlayer fx:id="mainPlayer" autoPlay="false">
                            <media>
                                <Media fx:id="mainMedia" source="http://download.oracle.com/otndocs/products/javafx/oow2010-2.flv" />
                            </media>
                        </MediaPlayer>
                    </mediaPlayer>
                </MediaView>
                <HBox fx:id="dropZone" onDragOver="#onDragOver" onDragEntered="#onDragEntered" onDragExited="#onDragExited" onDragDropped="#onDragDropped" alignment="CENTER_LEFT" layoutY="260.0" prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: blueviolet"  >
                    <children>

                    </children>
                </HBox>
                <HBox fx:id="mediaBar" alignment="CENTER_LEFT" layoutY="250.0" prefWidth="700.0" style="-fx-background-color: #FE642E;" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="playButton" onAction="#handlePlay">
                            <graphic>
                                <ImageView fitHeight="32" fitWidth="32">
                                    <image>
                                        <Image fx:id="play" url="@../Photo/play.jpg" />
                                        <Image fx:id="pause" url="@../Photo/pause.jpg" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Label fx:id="spacer1" text="   " />
                        <Button fx:id="stopButton" onAction="#handleStop">
                            <graphic>
                                <ImageView fitHeight="32" fitWidth="32">
                                    <image>
                                        <Image fx:id="stop" url="@../Photo/stop.jpg" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Label fx:id="spacer2" text="   " />
                        <Label fx:id="timeLabel" text="Time: " />
                        <Slider fx:id="timeSlader" minWidth="50.0" />
                        <Label fx:id="playTime" minWidth="50.0" prefWidth="100.0" />
                        <Label fx:id="volumeLabel" text="Vol: " />
                        <Slider fx:id="volumeSlider" minWidth="30.0" prefWidth="70.0" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </HBox>
            </children>
        </Pane>
    </center>

    <bottom>
        <HBox fx:id="soundZone" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="846.0" spacing="30" style="-fx-background-color: #0B3861">
            <padding><Insets topRightBottomLeft="50" /></padding>
            <children>
            <Button fx:id="pianoTest" alignment="CENTER_LEFT" onMouseClicked="#listenSound" onDragDetected="#onDragDetected" onDragDone="#onDragDone" text="pianoTest">
                <graphic>
                    <Pane>
                        <children>
                            <MediaView fitWidth="50" fitHeight="1" visible="false">
                                <mediaPlayer>
                                    <MediaPlayer fx:id="pianoPlayer" autoPlay="false">
                                        <media>
                                            <Media fx:id="pianoMedia" source="http://download.oracle.com/otndocs/products/javafx/oow2010-2.flv"/>
                                        </media>
                                    </MediaPlayer>
                                </mediaPlayer>
                            </MediaView>
                        </children>
                    </Pane>
                </graphic>
            </Button>
            <Button fx:id="guitarTest" onDragDetected="#onDragDetected" onDragDone="#onDragDone" text="guitarTest"/>
            <MenuButton fx:id="pianoButton">
                <graphic>
                    <ImageView fitHeight="80" fitWidth="80">
                        <image>
                            <Image url="@../Photo/piano.png" />
                        </image>
                    </ImageView>
                </graphic>
              <items>
                  <MenuItem fx:id="doPiano" text="Do">
                     <graphic>
                        <Button fx:id="playPiano1" >
                           <graphic>
                              <ImageView fitHeight="10.0" fitWidth="10.0">
                                  <image>
                                      <Image url="@../Photo/play.jpg" />
                                  </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="rePiano" text="Re" />
                  <MenuItem fx:id="miPiano" text="Mi" />
                  <MenuItem fx:id="faPiano" text="Fa" />
                  <MenuItem fx:id="solPiano" text="Sol" />
                  <MenuItem fx:id="laPiano" text="La" />
                  <MenuItem fx:id="siPiano" text="Si" />
              </items>
            </MenuButton>
            <MenuButton fx:id="drumsButton" >
                <graphic>
                    <ImageView fitHeight="80" fitWidth="80">
                        <image>
