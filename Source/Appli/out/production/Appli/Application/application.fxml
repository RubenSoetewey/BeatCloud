<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="459.0" prefWidth="846.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="newFile" text="New" accelerator="Ctrl + N" onAction="#createNewFile"/>
                        <MenuItem fx:id="openFile" text="Open..." accelerator="Ctrl + O" onAction="#openFile" />
                        <Menu text="Open recent">
                            <items>
                                <MenuItem text="Close Menu" />
                            </items>
                        </Menu>
                        <SeparatorMenuItem />
                        <MenuItem text="Save" accelerator="Ctrl + S" onAction="#saveFile"/>
                        <MenuItem text="Save As..." accelerator="Ctrl + Shift + S" />
                        <SeparatorMenuItem />
                        <Menu text="Import..." >
                            <items>
                                <MenuItem text="Media..." />
                            </items>
                        </Menu>
                        <MenuItem text="Preferences" />
                        <MenuItem text="Close" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Undo" accelerator="Ctrl + Z" />
                        <MenuItem text="Redo" accelerator="Ctrl + Y" />
                        <SeparatorMenuItem />
                        <MenuItem text="Cut" accelerator="Ctrl + X" />
                        <MenuItem text="Copy" accelerator="Ctrl + C" />
                        <MenuItem text="Paste" accelerator="Ctrl + V" />
                        <MenuItem text="Duplicate" accelerator="Ctrl + D" />
                        <MenuItem text="Delete" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <bottom>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="30" alignment="CENTER">
            <padding><Insets topRightBottomLeft="50" /></padding>
                <children>
                    <Button fx:id="pianoButton" onAction="#handlePiano">
                        <graphic>
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@Photo/piano.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="drumsButton" onAction="#handleDrums">
                        <graphic>
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@Photo/drums.jpg" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="guitarButton" onAction="#handleGuitar">
                        <graphic>
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@Photo/guitar.jpg" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="violinButton" onAction="#handleViolin">
                        <graphic>
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@Photo/violin.jpg" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </children>
            </HBox>
        </bottom>
</BorderPane>
